package consumo.médio;

import java.util.Scanner;

public class ConsumoMédio {

   
    public static void main(String[] args) {
        
        Scanner pet = new java.util.Scanner(System.in);
        
        System.out.println("escreva a distância percorrida pelo automóvel");
        float distancia = pet.nextFloat();
        System.out.println("Digite o total de combustível gasto");
        float combustivel = pet.nextFloat();
        float media = distancia/combustivel;
        
        System.out.println("O  combustível gasto é de: "+media+" Km/l");
        
    }
    
}


