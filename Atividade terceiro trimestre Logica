package media;

import java.util.Scanner;


public class Media {

   
    public static void main(String[] args) {
       
        Scanner pet = new java.util.Scanner(System.in);
        
        System.out.println("Digite seu nome");
        String aluno = pet.next();
        System.out.println("Digite sua primeira nota");
        float nota1 = pet.nextFloat();
        System.out.println("Digite sua segunda nota");
        float nota2 = pet.nextFloat();
        System.out.println("Digite sua terceira nota");
        float nota3 = pet.nextFloat();
        
        float media = (nota1+nota2+nota3)/3;
        
        if (media>=6){
            System.out.println("Olá "+aluno+" sua media foi: "+media+". Parabéns você passou.");
    }
        else{
            System.out.println("Olá "+aluno+" sua media foi: "+media+".reprovou, estude mais.");
        }
        
    }
    
}

